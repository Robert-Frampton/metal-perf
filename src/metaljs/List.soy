{namespace Templates.List}

/**
 * @param id
 */
{template .content}
	<div id="{$id}" class="component">
		{call .items data="all" /}
	</div>
{/template}

/**
 * @param id
 * @param items
 */
{template .items}
	<div id="{$id}-items">
		{foreach $item in $items}
			<div class="row">
				<div class="col-md-12">
					{call .item}
						{param id: $id /}
						{param surfaceId: 'item' + index($item) /}
						{param text: $item /}
					{/call}
				</div>
			</div>
		{/foreach}
	</div>
{/template}

/**
 * @param id
 * @param surfaceId
 * @param text
 */
{template .item}
	<span id="{$id}-{$surfaceId}">
		{$text}
	</span>
{/template}
